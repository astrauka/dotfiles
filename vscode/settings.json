// Place your settings in this file to overwrite the default settings
{
    "editor.tabSize": 2,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },
    "editor.rulers": [
        99
    ],
    "search.exclude": {
        "**/.bundle": true,
        "**/.sass-cache": true,
        "**/.tmp": true,
        "**/dist": true,
        "**/maven": true,
        "**/coverage": true,
        "**/vendor": true,
        "**/.tscache": true,
        "**/node_modules": true,
        "**/bower_components": true
    },
    "terminal.integrated.shell.osx": "/bin/zsh",
    "eslint.run": "onSave",
    "files.insertFinalNewline": true,
    "workbench.iconTheme": "vscode-icons",
    "files.associations": {
        "*.vm": "velocity"
    },
    "projectManager.openInNewWindow": false,
    "explorer.openEditors.visible": 4,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "files.trimTrailingWhitespace": true
}
